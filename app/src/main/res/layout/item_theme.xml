<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/themeBody_cv_item_theme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    android:layout_marginBottom="10dp"
    app:contentPadding="15dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/themeName_tv_item_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageTheme_iv_item_theme"
            android:text="主题名称"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/descriptionTheme_tv_item_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/themeName_tv_item_theme"
            android:layout_toLeftOf="@+id/imageTheme_iv_item_theme"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:text="主题描述......"
            android:textColor="@color/black_light"/>

        <ImageView
            android:id="@+id/imageTheme_iv_item_theme"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>